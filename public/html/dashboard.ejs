<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Growtopia - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="flex items-center justify-center min-h-screen bg-gradient-to-r from-blue-500 to-cyan-400">
    <div class="bg-white shadow-xl rounded-lg p-6 w-96">
        <h2 class="text-center text-2xl font-semibold text-gray-700">Welcome Back</h2>
        <p class="text-center text-gray-500 text-sm">Sign in to continue</p>
        
        <div id="errorDiv" class="hidden text-red-500 text-sm mt-2 text-center"></div>
        
        <form method="post" action="/player/growid/login/validate" id="loginForm" class="mt-4">
            <input name="type" value="log" type="hidden">
            <input name="_token" value="<%= JSON.stringify(data) %>" type="hidden">
            
            <div class="mb-3">
                <label for="loginGrowId" class="text-gray-600 text-sm">GrowID</label>
                <div class="flex items-center border border-gray-300 rounded-lg px-3 py-2 bg-gray-100">
                    <i class="fas fa-user text-gray-400"></i>
                    <input type="text" name="growId" id="loginGrowId" class="w-full bg-transparent focus:outline-none ml-2 text-gray-700" placeholder="Enter your GrowID">
                </div>
            </div>
            
            <div class="mb-3">
                <label for="loginPassword" class="text-gray-600 text-sm">Password</label>
                <div class="flex items-center border border-gray-300 rounded-lg px-3 py-2 bg-gray-100">
                    <i class="fas fa-lock text-gray-400"></i>
                    <input type="password" name="password" id="loginPassword" class="w-full bg-transparent focus:outline-none ml-2 text-gray-700" placeholder="Enter your password">
                    <button type="button" id="toggleLogPassword" class="text-gray-500 focus:outline-none">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
            </div>
            
            <div class="flex justify-between items-center">
                <button id="loginButton" class="w-1/2 bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition duration-300">Login</button>
                <button id="registerButton" class="w-1/2 ml-2 bg-gray-300 text-gray-700 py-2 rounded-lg hover:bg-gray-400 transition duration-300">Register</button>
            </div>
        </form>
    </div>
    
    <script>
        document.getElementById('loginButton').addEventListener('click', function (event) {
            event.preventDefault();
            const uName = document.getElementById('loginGrowId').value;
            const uPass = document.getElementById('loginPassword').value;
            
            if (!uName || !uPass) {
                document.getElementById('errorDiv').classList.remove('hidden');
                document.getElementById('errorDiv').innerText = 'Username or Password cannot be empty';
                return;
            }
            document.getElementById('loginForm').submit();
        });
        
        document.getElementById('registerButton').addEventListener('click', function () {
            document.getElementById('loginForm').submit();
        });
        
        document.getElementById('toggleLogPassword').addEventListener('click', function () {
            const passwordField = document.getElementById('loginPassword');
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                this.innerHTML = '<i class="fas fa-eye-slash"></i>';
            } else {
                passwordField.type = 'password';
                this.innerHTML = '<i class="fas fa-eye"></i>';
            }
        });
    </script>
</body>
</html>
